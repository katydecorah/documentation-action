{
  "name": "documentation-action",
  "version": "1.0.0",
  "description": "A GitHub action to document your GitHub action.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "pretest": "eslint . --ext .js,.mjs,.ts",
    "test": "jest --coverage",
    "build": "ncc build src/index.ts",
    "prepare": "husky install",
    "pretty-quick": "pretty-quick"
  },
  "author": "Katy DeCorah",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.4.0",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.2",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.9.5"
  },
  "jest": {
    "resetMocks": true,
    "clearMocks": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  }
}
